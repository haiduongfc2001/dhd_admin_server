<% include('../layouts/header.ejs') %>

<img
        src="userImages/<%= user.image %>"
        alt="<%= user.image %>"
        style="width: 80px; height: 80px"
/>
<br> <br>

<form action="" method="post" enctype="multipart/form-data">

    <input type="file" name="image"/>
    <input type="hidden" name="user_id" value="<%= user._id %>"/>
    <br><br>
    <input type="text" name="name" value="<%= user.name %>" placeholder="Enter Name" required/>
    <br><br>
    <input type="email" name="email" value="<%= user.email %>" placeholder="Enter Email" required/>
    <br><br>
    <input type="number" name="phone" value="<%= user.phone %>" placeholder="Enter Phone" required/>
    <br><br>

    <input type="submit" value="Update Profile"/>

</form>


<a href="/">
    <button>Home</button>
</a>

<% include('../layouts/footer.ejs') %>