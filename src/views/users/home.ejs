<% include('../layouts/header.ejs') %>

<h1> Welcome, <%= user.name %> </h1>

<table style="width: 50%">
    <tr>
        <td>
            <img
                    src="userImages/<%= user.image %>"
                    alt="<%= user.image %>"
                    style="width: 80px; height: 80px"
            />
        </td>
    </tr>
    <tr>
        <td>Email</td>
        <td><%= user.email %></td>
    </tr>
    <tr>
        <td>Phone</td>
        <td><%= user.phone %></td>
    </tr>
    <tr>
        <td>Verified</td>
        <td>
            <%
                if(user.is_verified === 1) {
                    %>
                        <p>True</p>
                    <%
                } else {
                    %>
                        <p>False</p>
                    <%
                }
            %>
        </td>
    </tr>
</table>

<a href="/edit?id=<%= user._id %>">
    <button>Edit</button>
</a>
<br><br>

<a href="/logout">
    <button>Logout</button>
</a>

<% include('../layouts/footer.ejs') %>