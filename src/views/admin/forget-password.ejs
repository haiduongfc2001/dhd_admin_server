<% include('../layouts/header.ejs') %>

<h1> Reset Password </h1>

<%
    if (typeof message !== 'undefined') {
        %>
            <h3><%= message %></h3>
        <%
    }
%>

<form action="" method="post">

    <input
            type="password"
            name="password"
            required
            placeholder="Nhập mật khẩu mới"
    />
    <input
            type="hidden"
            name="user_id"
            value="<%= user_id %>"
    />
    <br> <br>

    <input type="submit" value="Reset Password"/>

</form>

<% include('../layouts/footer.ejs') %>