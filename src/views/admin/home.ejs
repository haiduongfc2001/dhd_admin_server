<% include('../layouts/header.ejs') %>

<h1>Welcome, <%= admin.name %></h1>

<a href="/admin/dashboard">
    <button>
        Dashboard
    </button>
</a>
<br><br>

<table style="width: 50%">
    <tr>
        <td>
            <img
                    src="userImages/<%= admin.image %>"
                    alt="<%= admin.image %>"
                    style="width: 80px; height: 80px"
            />
        </td>
    </tr>
    <tr>
        <td>Email</td>
        <td><%= admin.email %></td>
    </tr>
    <tr>
        <td>Phone</td>
        <td><%= admin.phone %></td>
    </tr>
    <tr>
        <td>Verified</td>
        <td>
            <%
            if(admin.is_verified === 1) {
            %>
                <p>True</p>
            <%
            } else {
            %>
                <p>False</p>
            <%
            }
            %>
        </td>
    </tr>
</table>

<a href="/admin/logout">
    <button>
        Logout
    </button>
</a>

<% include('../layouts/footer.ejs') %>
